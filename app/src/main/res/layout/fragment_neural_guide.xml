<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_neural_guide_root"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <FrameLayout
        android:id="@+id/fragment_neural_guide_camera_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        android:textColor="#33b5e5"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center">
    </FrameLayout>

    <TextView
        android:id="@+id/fragment_neural_guide_prompt"
        android:text="@string/camera_tap_or_speak_prompt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/neural_guide_prompt_height"
        android:layout_margin="@dimen/neural_guide_prompt_margin"
        android:textAppearance="@style/neural_guide_prompt_text_style"
        android:gravity="center_vertical"
        android:padding="@dimen/neural_guide_prompt_padding"
        android:elevation="8dp"
        android:background="@drawable/card" />

    <TextView
        android:id="@+id/fragment_neural_guide_feedback_text"
        android:text="@string/camera_feedback_placeholder_text"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_height="@dimen/neural_guide_result_panel_height"
        android:padding="@dimen/neural_guide_result_panel_padding"
        android:textAppearance="@style/neural_guide_result_text_style"
        android:gravity="center_vertical"
        android:elevation="24dp"
        android:background="#FFFFFFFF" />

</RelativeLayout>